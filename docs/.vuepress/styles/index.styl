$pulseRed = #EF425A;
$pulseRedLighter = #FF6292;
$pulseCodeBackground = #282e3f;
$pulseGrey = #7e9ab3;
$pulseFaint = #526577;
$pulseGreen = #00FFB2;
$pulseYellow = #FFD696;
$pulseWhite = #F7F8F8;
$pulseLightBlue = #B6DCFF;

table
    tr, td, th
        border-color: $pulseGrey;
    tr:nth-child(2n)
        background-color: $pulseCodeBackground;

    code 
        line-height: 2em !important;


pre.vue-container
  border-left-width: .5rem;
  border-left-style: solid;
  border-color: #EF425A;
  border-radius: 0px;
  & > code
    color: #808080;
    font-size: 14px !important;
    & > p
      margin: -5px 0 -20px 0;
    code
      background-color: #EF425A !important;
      padding: 3px 5px;
      border-radius: 3px;
      font-size: 1.02em;
      color #fff;
      font-weight: bold;
    em
      color #808080;
      font-weight light;
    strong 
      color #fff;


.theme-default-content:not(.custom)
    margin 0
    max-width 820px

@font-face {
  font-family: dank;
  src: url(/DankMono-Regular.ttf);
}

