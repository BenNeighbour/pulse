.token
    &.punctuation
        color #7e9ab3;
    &.namespace
        opacity .7;
    &.deleted
        text-decoration line-through;
    &.inserted
        border-bottom 1px dotted #fff3eb;
        text-decoration none;
    &.italic
        font-style italic;
    &.important
        color #a48774;
    &.entity
        cursor help;


