.theme-default-content
    pre
        background-color $codeBgColor !important
        code 
            color #CDD8E1 !important
            font-family dank
            line-height 1.7rem !important
            font-size 1rem !important
            // font-weight: bold;

.theme-default-content a code
    color $pulseRed

.token.comment
    color $pulseFaint;

.token.prolog,
.token.doctype,
.token.cdata
    color $pulseGrey;

.token.boolean,
.token.string
    color $pulseYellow


.token.constant,
.token.class-name
    color $pulseRedLighter

.token.function
    color $pulseGreen;

.token.keyword,
.token.entity,
.token.url,
.token.attr-value,
.token.control,
.token.directive,
.token.unit,
.token.statement,
.token.regex,
.token.operator,
.token.atrule
    color $pulseGrey;

.token.property
    color $pulseWhite;

.token.tag-id,
.token.selector,
.token.atrule-id
    color #fff3eb

code.language-javascript,
.token.attr-name,

    color #a48774

